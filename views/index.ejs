        </button>
        <button class="btn btn-light position-absolute end-0 top-50 translate-middle-y z-3 shadow d-none d-md-inline" id="scrollRight">
          <i class="fa-solid fa-chevron-right"></i>
        </button>
    
        <div class="overflow-auto flex-grow-1" style="scrollbar-width: none;" id="filterScroll">
          <% const filters = [
            { icon: "fa-fire", label: "Trending" },
            { icon: "fa-tree-city", label: "Treehouse" },
            { icon: "fa-umbrella-beach", label: "Beachfront" },
            { icon: "fa-mountain-city", label: "Mountain" },
